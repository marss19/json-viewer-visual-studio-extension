<UserControl x:Class="Marss.JsonViewer.MyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <DockPanel LastChildFill="True">
            <TextBlock Margin="10" DockPanel.Dock="Top" >Paste JSON Data:</TextBlock>
            <TextBox Margin="10 0 10 10" DockPanel.Dock="Top" TextWrapping="Wrap" AcceptsReturn="True" Height="200"  HorizontalContentAlignment="Stretch" 
                     Name="tbData" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto"></TextBox>
            <Button Margin="10 0 10 10" DockPanel.Dock="Top" Content="Format to Friendly View" Click="btnFormat_Click" Width="200" Height="30" Name="btnFormat"  HorizontalAlignment="Left"/>
            <WebBrowser x:Name="webBrowser" Margin="10 0 10 10"></WebBrowser>
        </DockPanel>
    </Grid>
</UserControl>
